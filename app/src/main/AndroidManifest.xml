<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.marco.tipcalc">

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconocalc"
        android:label="@string/app_name"
        android:name="org.marco.tipcalc.TipCalcApp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.marco.tipcalc.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.marco.tipcalc.activities.TipDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.marco.tipcalc.activities.MainActivity"/>
        </activity>
    </application>

</manifest>